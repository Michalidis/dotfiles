{
  // CoC Angular
  "angular.suggest.includeCompletionsWithSnippetText": true,
  "angular.suggest.includeAutomaticOptionalChainCompletions": true,

  // Tslint on save
  "tslint.enable": true,
  "tslint.autoFixOnSave": true,

  // Typescript
  "typescript.preferences.importModuleSpecifier": "relative",
  "tsserver.implicitProjectConfig.experimentalDecorators": true,

  // Run prettier (and others)
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "scss",
    "markdown",
    "Markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "graphql",
    "handlebars",
    "html"
  ]
}
